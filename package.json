{
  "name": "secureauth-pro",
  "version": "1.0.2",
  "description": "Hệ thống xác thực bảo mật với công nghệ đa tầng và License Key",
  "author": "SecureAuth Team",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node build.js -- --publish=never",
    "build:win": "node build.js -- --win --publish=never",
    "release": "node build.js -- --win --publish=always"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "axios-cookiejar-support": "^4.0.7",
    "cheerio": "^1.1.2",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "tough-cookie": "^5.1.2"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "electron": "^30.0.9",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "fs-extra": "^11.3.1",
    "javascript-obfuscator": "^4.1.1"
  },
  "build": {
    "appId": "com.secureauth.pro",
    "productName": "SecureAuth Pro",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "SecureAuth Pro"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "anhbaokr",
        "repo": "Toolvip",
        "releaseType": "release"
      }
    ]
  }
}
